{
  "name": "solarsystem",
  "version": "1.0.0",
  "description": "Browser-based Solar System simulation using TypeScript and Vite",
  "license": "ISC",
  "author": "Yarikov A.K.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guitar19823/solarsystem.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "@types/jest": "^30.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}